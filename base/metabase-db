apiVersion: apps/v1
kind: Deployment
metadata:
  name: metabase-db
  namespace: metabase
spec:
  replicas: 1
  selector:
    matchLabels:
      app: metabase-db
  template:
    metadata:
      labels:
        app: metabase-db
    spec:
      containers:
        - name: postgres
          image: postgres:13
          env:
            - name: POSTGRES_DB
              value: metabase
            - name: POSTGRES_USER
              value: metabase
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: metabase-db-secret
                  key: password
          ports:
            - containerPort: 5432
          volumeMounts:
            - name: postgres-storage
              mountPath: /var/lib/postgresql/data
      volumes:
        - name: postgres-storage
          persistentVolumeClaim:
            claimName: metabase-db-pvc